<resources>

    <!-- page layouts -->

    <style name="StandardLinearLayout">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StandardLinearLayoutPage" parent="StandardLinearLayout">
        <item name="android:background">#F5F5F5</item>
    </style>

    <style name="LineLinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/app_padding</item>
        <item name="android:paddingRight">@dimen/app_padding</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="CardLinearLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <!-- gray dividers -->

    <style name="GrayDividerListView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">#33999999</item>
    </style>

    <style name="GrayDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#33999999</item>
    </style>

    <!-- texts -->

    <style name="BigInputText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="BaseText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CardBaseText" parent="BaseText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="StdText" parent="BaseText">
        <item name="android:gravity">center</item>
    </style>

    <style name="Info" parent="StdText">
        <item name="android:layout_marginRight">@dimen/app_padding</item>
        <item name="android:layout_marginLeft">@dimen/app_padding</item>
        <item name="android:maxWidth">330dp</item>
    </style>

    <style name="MarginInfo" parent="Info">
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <!-- transparent buttons -->

    <style name="TransButton" parent="Info">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <!-- sliding dialog -->

    <style name="SlidingDialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/slide_hide</item>
    </style>

    <!-- overall theme style -->

    <style name="NoBarMain" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorAccent">#34B4E3</item>
    </style>

    <style name="NoBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/bg</item>
        <item name="colorAccent">#34B4E3</item>
    </style>

    <style name="CustomBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#FF000000</item>
        <item name="colorAccent">#34B4E3</item>
    </style>

    <!-- floating buttons style -->

    <style name="FloatingMenu">
        <item name="android:layout_margin">@dimen/app_padding</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="menu_animationDelayPerItem">0</item>
        <item name="android:layout_height">100dp</item>
        <item name="menu_shadowColor">#33000000</item>
        <item name="menu_labels_textSize">18sp</item>
    </style>

    <style name="FabButton">
        <item name="fab_shadowColor">#33000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- toolbar -->

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">#FFBBBBBB</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>