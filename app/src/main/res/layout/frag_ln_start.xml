<LinearLayout
    style="@style/StandardLinearLayoutPage"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:subtitleTextAppearance="@style/ToolbarSubtitleAppearance"
        app:titleTextAppearance="@style/ToolbarTitleAppearance"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="64sp"
        android:id="@+id/toolbar"

        app:contentInsetLeft="@dimen/app_padding"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetStart="@dimen/app_padding"
        app:contentInsetEnd="@dimen/app_padding"/>

    <LinearLayout
        android:visibility="gone"
        android:gravity="top|center"
        android:orientation="vertical"
        android:background="@color/btc"
        android:id="@+id/batchPresentWrap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/Info"
            android:textColor="#FFFFFFFF"
            android:id="@+id/batchPresentInfo"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/app_padding"
            android:layout_marginBottom="@dimen/app_padding"/>

        <Button
            style="@style/Info"
            android:layout_width="wrap_content"
            android:text="@string/dialog_cancel"
            android:id="@+id/batchPresentCancel"
            android:layout_marginBottom="@dimen/app_padding"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lnStartNodesList"
        style="@style/GrayDividerListView"/>

</LinearLayout>